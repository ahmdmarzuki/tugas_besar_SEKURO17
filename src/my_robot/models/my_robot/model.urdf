<?xml version="1.0"?>
<robot name="my_robot">

    <!-- MATERIALS -->
    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>


    <!-- CHASSIS -->
    <link name="chassis">
        <inertial>
            <mass value="1.14395"/>
            <origin xyz="0 0 0.25" rpy="0 0 0"/>
            <inertia ixx="0.095329" ixy="0" ixz="0" iyy="0.381317" iyz="0" izz="0.476646"/>
        </inertial>

        <!-- VISUAL -->
        <visual>
            <origin xyz="0 0 0.25" rpy="0 0 0"/>
            <geometry>
                <box size="2.0 1.0 0.5"/>
            </geometry>
            <material name="chassis_material">
                <material name="blue"/>
            </material>
        </visual>

        <!-- COLLISION -->
        <collision>
            <geometry>
                <box size="2.0 1.0 0.5"/>
            </geometry>
        </collision>
    </link>

    <!-- LEFT WHEEL -->
    <link name="left_wheel">
        <inertial>
            <origin xyz="-0.5 0.6 0" rpy="-1.5707 0 0"/>
            <mass value="1"/>
            <inertia ixx="0.043333" ixy="0" ixz="0" iyy="0.043333" iyz="0" izz="0.08"/>
        </inertial>

        <!-- VISUAL -->
        <visual>
            <origin xyz="-0.5 0.6 0" rpy="-1.5707 0 0"/>
            <geometry>
                <cylinder radius="0.4" length="0.2"/>
            </geometry>
            <material name="wheel_material">
                <material name="black"/>
            </material>
        </visual>

        <!-- COLLISION -->
        <collision>
            <geometry>
                <cylinder radius="0.4" length="0.2"/>
            </geometry>
        </collision>
    </link>

    <!-- RIGHT WHEEL -->
    <link name="right_wheel">
        <inertial>
            <origin xyz="-0.5 -0.6 0" rpy="-1.5707 0 0"/>
            <mass value="1"/>
            <inertia ixx="0.043333" ixy="0" ixz="0" iyy="0.043333" iyz="0" izz="0.08"/>
        </inertial>

        <!-- VISUAL -->
        <visual>
            <origin xyz="-0.5 -0.6 0" rpy="-1.5707 0 0"/>
            <geometry>
                <cylinder radius="0.4" length="0.2"/>
            </geometry>
            <material name="wheel_material">
                <material name="black"/>
            </material>
        </visual>

        <!-- COLLISION -->
        <collision>
            <geometry>
                <cylinder radius="0.4" length="0.2"/>
            </geometry>
        </collision>
    </link>

    <!-- CASTER -->
    <link name="caster">
        <inertial>
            <origin xyz="0.6 0 -0.2" rpy="0 0 0"/>
            <mass value="1"/>
            <inertia ixx="0.016" ixy="0" ixz="0" iyy="0.016" iyz="0" izz="0.016"/>
        </inertial>

        <!-- VISUAL -->
        <visual>
            <origin xyz="0.6 0 -0.2" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.2"/>
            </geometry>
            <material name="caster_material">
                <material name="black"/>
            </material>
        </visual>

        <!-- COLLISION -->
        <collision>
            <geometry>
                <sphere radius="0.2"/>
            </geometry>
        </collision>
    </link>

    <!-- JOINTS -->
    <!-- Left Wheel Joint -->
    <joint name="left_wheel_joint" type="revolute">
        <parent link="chassis"/>
        <child link="left_wheel"/>
        <origin xyz="-0.5 0.6 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="-1.79769e+308" upper="1.79769e+308"/>
    </joint>

    <!-- Right Wheel Joint -->
    <joint name="right_wheel_joint" type="revolute">
        <parent link="chassis"/>
        <child link="right_wheel"/>
        <origin xyz="-0.5 -0.6 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="-1.79769e+308" upper="1.79769e+308"/>
    </joint>

    <!-- Caster Joint -->
    <joint name="caster_wheel" type="ball">
        <parent link="chassis"/>
        <child link="caster"/>
        <origin xyz="0.6 0 -0.2" rpy="0 0 0"/>
    </joint>

</robot>